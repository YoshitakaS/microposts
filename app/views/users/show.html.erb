<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="profile">
      <h1>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        home: <%= @user.area %>
      </h1>
      
      <h1>
        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
        age: <%= @user.age %>
      </h1>
    </div>
  </div>
</div>